<script type="text/javascript">
    /**
     * Initialize the application
     */
    $(document).ready(function(){
        
        // initialize view manager to handle all the used views
        var app = new CubeViz_View_Application();
        
        /**
         * Add data to application instance
         */
        app._ = <?php echo $this->cubeVizConfig; ?>
        
        /**
         * Add views
         */
        app
            /**
             * These views will added and executed on render() call. (second parameter 
             * causes that)
             */
            .add("View_CubeVizModule_DataStructureDefintion", "#cubviz-dataStructureDefinition-listContainer",true)
            .add("View_CubeVizModule_Footer", "#cubeviz-footer-container", true)
        
            /**
             * These views will only added but not executed on render() call.
             */
            .add("View_CubeVizModule_DataSet", "#cubeviz-dataSet-list")
            .add("View_CubeVizModule_Component", "#cubviz-component-listBox")
        
            // run all autostart views
            .render();
    });
    
</script>

